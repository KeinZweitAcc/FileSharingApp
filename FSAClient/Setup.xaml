<Page x:Class="FSAClient.Setup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FSAClient"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Setup">

    <Grid Background="#FFE6EFED">
        <Label Content="Hallo!" HorizontalAlignment="Center" Margin="0,32,0,0" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI" FontSize="22" FontWeight="Bold"/>
        <Label Content="Um eine Peer to Peer Verbindung zu ermöglichen, benötigen wir Ihre öffentliche IP-Adresse &amp; Port.&#xA;(Möglicherweise müssen Sie in den Router-Einstellungen den unten angegebenen Port freigeben.)" HorizontalAlignment="Center" Margin="0,88,0,0" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI"/>
        <Label x:Name="LabelLocalMode" Content="&gt; Setup abschliessen, jedoch FSA innerhalb eines lokalen Netzwerks verwenden" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="109,0,0,34" FontFamily="Microsoft YaHei UI" Foreground="#FF0F09D2" Cursor="Hand" MouseLeftButtonUp="LabelLocalMode_Click"/>
        <TextBox x:Name="TextBoxPublicIP" HorizontalAlignment="Left" Margin="110,174,0,0" TextWrapping="Wrap" Text="---.---.---.---" VerticalAlignment="Top" Width="260"/>
        <TextBox x:Name="TextBoxPublicPort" HorizontalAlignment="Left" Margin="400,174,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="290"/>
        <Label Content="Öffentliche IP-Adresse:" HorizontalAlignment="Left" Margin="109,148,0,0" VerticalAlignment="Top" Width="262"/>
        <Label Content="Öffentliches Port:" HorizontalAlignment="Left" Margin="400,148,0,0" VerticalAlignment="Top" Width="110" RenderTransformOrigin="0.48,-0.427"/>
        <Label Content="Lokales Port:" HorizontalAlignment="Left" Margin="400,214,0,0" VerticalAlignment="Top" Width="110"/>
        <Label Content="Private IP-Adresse:" HorizontalAlignment="Left" Margin="109,214,0,0" VerticalAlignment="Top" Width="262"/>
        <TextBox x:Name="TextBoxLocalIP" HorizontalAlignment="Left" Margin="110,240,0,0" TextWrapping="Wrap" Text="---.---.---.---" VerticalAlignment="Top" Width="260"/>
        <TextBox x:Name="TextBoxLocalPort" HorizontalAlignment="Left" Margin="400,240,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="290" Text="5030"/>
        <Button x:Name="ButtonFinishSetup" Content="Setup Abschliessen" HorizontalAlignment="Center" Margin="10,329,0,0" VerticalAlignment="Top" Width="584" Click="ButtonFinishSetup_Click"/>
        <Label Content="Client-Name:" HorizontalAlignment="Left" Margin="110,282,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxName" HorizontalAlignment="Left" Margin="209,286,0,0" TextWrapping="Wrap" Text="Unnamed Client" VerticalAlignment="Top" Width="481"/>

    </Grid>
</Page>
