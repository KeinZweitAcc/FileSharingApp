<Window x:Class="FileSharingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileSharingApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="10" Text="Username"/>
            <TextBox x:Name="IpTextBox" Width="200" Margin="10" Text="IP Address"/>
            <TextBox x:Name="PortTextBox" Width="200" Margin="10" Text="Port"/>
            <Button x:Name="LoginButton" Content="Login" Width="100" Margin="10" Click="LoginButton_Click"/>
            <Button x:Name="LogoutButton" Content="Logout" Width="100" Margin="10" Click="LogoutButton_Click" IsEnabled="False"/>
            <ListBox x:Name="UserListBox" Width="400" Height="200" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>